@model TravelBookingProject.ViewModel.ConfidentialityRequirementViewModel
@{
    ViewBag.Title = "ConfidentialityRequirementForm";
}

@*<h2>ConfidentialityRequirementForm</h2>*@

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>                    @*We are doing this to validate the field at client side*@
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div style="border: 2px solid black; background-color:white;border-radius:8px"><h2 style="font-weight: bold; text-align:center">Confidentiality Requirements</h2></div>
<br />
<br />
<br />
<br />
<br />
<br />

@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" });

    <table class="table" style="font-size:15px; background-color:white; table-layout:fixed">
        <tr>
            <td style="text-align:center; background-color:lightseagreen">
                @Html.Label("Data Provide in this form will be viewable by the GM SPCOS in the home and host countries, as well as GM team members via the Global Mobility platform. If require more restrictive confidentiality measures, please describe your requirements below:")
            </td>
            <td>
                @Html.TextAreaFor(m => m.Requirement, new { @class = "form-control" })
            </td>
        </tr>
    </table>
    <br/>
    <br/>
    <br/>
    <br/>


    <div class="center-block" style="text-align:center">
        <input type="submit" class="btn btn-success" style="height: 50px; width: 100px; font-size: 2rem; background-color: lightseagreen; border-radius: 25px; color: black; " onclick="if (confirm('Are the details entered by you correct? Once moved to another page, data can not be modified.')) {return true;} else {return false;}" value="Submit" />
       </div>
    }
