@model TravelBookingProject.ViewModel.ProjectDetailViewModel
@{
    ViewBag.Title = "ProjectDetailForm";
}
<style>
    body {
        background-color: white;
    }
</style>
@*<h2 class="text-center" style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;color:black; font-size:45px; font-weight:200">ProjectDetailForm</h2>*@

<div style="border: 2px solid black; background-color:white;border-radius:8px"><h2 style="font-weight: bold; text-align:center">ProjectDetailForm</h2></div>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" });
    <table class="table" style="font-size:15px; background-color:white; table-layout:fixed">
        <tr>
            <td style="text-align:center; background-color:lightseagreen">
                @Html.Label("Role/title in Host Country:")
            </td>
            <td>
                @Html.TextBoxFor(m => m.Role_in_Host_Country, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td style="text-align:center; background-color:lightseagreen">
                @Html.Label("Brief Description of the role in the host country:")
            </td>
            <td>
                @Html.TextBoxFor(m => m.Role_description_Host_Country, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td style="text-align:center; background-color:lightseagreen">
                @Html.Label("Annual Base Salary(amount and currency):")
            </td>
            <td>
                @Html.TextBoxFor(m => m.Annual_base_Salary, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td style="text-align:center; background-color:lightseagreen">
                @Html.Label("Name of Worldline entity bearing the costs in the host country:")
            </td>
            <td>
                @Html.TextBoxFor(m => m.Worldline_Entity_name_bearing_costs, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td style="text-align:center; background-color:lightseagreen">
                @Html.Label("Worldline costs centre bearing the costs:")
            </td>
            <td>
                @Html.TextBoxFor(m => m.worldline_costs_centre_bearing_costs, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td style="text-align:center; background-color:lightseagreen">
                @Html.Label("Name of client for whom employee will be working(if applicable,otherwise specify NA:")
            </td>
            <td>
                @Html.TextBoxFor(m => m.Client_name_for_whome_Employee_Working, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td style="text-align:center; background-color:lightseagreen">
                @Html.Label("Name of project on which employee will be working(if applicable, otherwise specify NA):")
            </td>
            <td>
                @Html.TextBoxFor(m => m.Project_name_on_which_Employee_Working, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td style="text-align:center; background-color:lightseagreen">
                @Html.Label("Nature of the activity in the host country:")
            </td>
            <td>
                @Html.TextBoxFor(m => m.Nature_of_Activity, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td style="text-align:center; background-color:lightseagreen">
                @Html.Label("Worldline Recruitment or WFM request ID(Igrasp/Roma/DSMS)-if applicable, otherwise specify NA:")
            </td>
            <td>
                @Html.TextBoxFor(m => m.Worldline_recruitment, new { @class = "form-control" })
            </td>
        </tr>
        @*<tr>
                <td colspan="2" style="text-align:center">
                    <input type="submit" class="btn btn-success" style="height: 50px; width: 100px; font-size: 1.4rem; background-color: lightseagreen; border-radius: 25px; color: black; margin-left: 100px" onclick="if (confirm('Are the details entered by you correct?')) {return true;} else {return false;}" />
                </td>
            </tr>*@
    </table>

    <div class="center-block" style="margin-left:900px">
        <input type="submit" class="btn btn-success" style="height:50px; width:100px; font-size:20px; background-color:lightseagreen; color:black; " onclick="if (confirm('Are the details entered by you correct? Once moved to another page, data can not be modified.')) {return true;} else {return false;}" value="Next>>" />
    </div>
}
