@model IEnumerable<TravelBookingProject.ViewModel.ManagerPageViewModel>
@{
    ViewBag.Title = "Manager";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<style>
    body {
        background-color:white;
    }
</style>

<h2 style="color:black; font-family:'Times New Roman', Times, serif; font-size:45px" class="text-center">Manager Approval</h2>
<div class=alert-danger>
    <strong>
        @TempData["ErrorMessage"]
    </strong>
</div>
@*<h4 class="text-center text-danger" style="background-color:lightseagreen; font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;border-color:black;font-size:25px">
    @TempData["ErrorMessage"]
</h4>*@
<br />
@using (Html.BeginForm())
{
    <table class="table table-hover" >

        <tr style="background-color:lightseagreen; font-size:15px">
            <th class="hidden">Employee Id</th>
            <th class="hidden">Request Number</th>

            <th>Employee Name</th>
            <th>Registed_Date</th>
            <th>Status</th>

            <th>Employee Details</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr style="background-color:white; font-size:15px">
                <td class="hidden">@item.EmpId</td>
                <td class="hidden">@item.Request_No</td>
                <td>@item.EmpName</td>
                <td>@item.Registed_Date</td>
                <td>@item.Status</td>


                <td>
                    <input class="btn btn-primary" value="Details" type="submit" style="height: 50px; width: 100px; font-size: 1.4rem; background-color: lightseagreen; border-radius: 25px;" id=item.EmpId formaction="@Url.Action("Details","TravelBooking", new {id1=item.EmpId,id2=item.Request_No})" formmethod="post" />

                </td>


            </tr>

        }
    </table>

}


